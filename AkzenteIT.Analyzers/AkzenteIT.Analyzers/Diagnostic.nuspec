<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
  <metadata>
    <id>AkzenteIT.Analyzers</id>
    <version>1.0.0.0</version>
    <title>AkzenteIT.Analyzers</title>
    <authors>Thomas Krause</authors>
